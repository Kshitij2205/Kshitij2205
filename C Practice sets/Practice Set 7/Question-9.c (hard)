// Create a three-dimensional array and print the address of its elements in increasing order.

#include <stdio.h>

int main()
{
    int arr[2][3][4] = {{1, 2, 3},
                        {4, 5, 6},
                        {7, 8, 9}};

    int x, y, z;

    for (x = 0; x < 3; x++)
    {
        for (y = 0; y < 3; y++)
        {
            for(z = 0; z < 3; z++)
                    printf("The address of arr[%d][%d][%d]: %d\n", x, y, z, arr[x][y][z]);
        }
                
    }

    return 0;
}