// Write a program using functions to print the following pattern (first n lines)

// * 
// ***
// *****

void star(int n)
{
    for (int i = 1; i <= n; i++)
    {
        for(int j = 1; j <= i; j++)
            printf("*")

        printf
    }
}

#include <stdio.h>

int main()
{
    int n;

    printf("Enter the n number of lines: ");
    scanf("%d", &n);

    star(n);

    return 0;
}